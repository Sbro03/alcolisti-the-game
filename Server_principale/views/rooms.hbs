<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-8 col-10">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Benvenuto!</h1>
                    <form id="joinRoomForm" class="text-center">
                        <div class="mb-3">
                            <label for="roomCode" class="form-label">Codice Stanza</label>
                            <input type="text"
                                   class="form-control bg-secondary text-light border-0"
                                   id="roomCode"
                                   name="roomCode"
                                   placeholder="Inserisci il codice della stanza"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label for="playerName" class="form-label">Nome Giocatore</label>
                            <input type="text"
                                   class="form-control bg-secondary text-light border-0"
                                   id="playerName"
                                   name="playerName"
                                   placeholder="Inserisci il tuo nome"
                                   required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Entra nella stanza</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
